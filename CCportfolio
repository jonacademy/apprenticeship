                <div id="ksb-b6" class="ksb-card bg-white p-6 rounded-lg shadow-sm"><div class="grid md:grid-cols-3 gap-4"><div class="md:col-span-1"><h3 class="font-bold text-lg text-indigo-700">B6</h3><p class="text-sm text-slate-600">Committed to keeping up to date with new technologies and industry best practice.</p></div><div class="md:col-span-2"><h4 class="font-semibold text-slate-700 mb-2">Suggested Visual Evidence</h4><ul class="list-disc list-inside text-slate-600 text-sm space-y-1"><li>Certificate of completion for an online course.</li><li>A blog post or presentation you created about a new technology.</li><li>Witness testimony on your passion for learning.</li></ul></div></div><div class="mt-4 pt-4 border-t border-slate-200 text-right"><span class="text-xs font-semibold text-slate-500 mr-2">Maps to:</span><span data-map="k27" class="ksb-map-tag bg-indigo-100 hover:bg-indigo-200 text-indigo-800 text-xs font-medium px-2.5 py-1 rounded-full">K27</span><span data-map="k28" class="ksb-map-tag bg-indigo-100 hover:bg-indigo-200 text-indigo-800 text-xs font-medium px-2.5 py-1 rounded-full">K28</span></div></div>
            </section>

        </main>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const navButtons = document.querySelectorAll('.nav-button');
        const contentSections = document.querySelectorAll('.content-section');
        const mainContent = document.getElementById('main-content');

        // --- Function to handle section switching ---
        function switchSection(targetSectionId) {
            // Update button active state
            navButtons.forEach(btn => {
                btn.classList.toggle('active', btn.dataset.section === targetSectionId);
            });
            
            // Show/hide content sections
            contentSections.forEach(section => {
                section.style.display = section.id === targetSectionId ? 'block' : 'none';
            });
        }

        // --- Initialize the first section as active ---
        if (navButtons.length > 0) {
            const initialSectionId = navButtons[0].dataset.section;
            switchSection(initialSectionId);
        }

        // --- Sidebar navigation logic ---
        const navigation = document.getElementById('navigation');
        navigation.addEventListener('click', (event) => {
            if (event.target.matches('.nav-button')) {
                switchSection(event.target.dataset.section);
            }
        });

        // --- KSB highlighting logic (using event delegation on the main content area) ---
        mainContent.addEventListener('click', (event) => {
            const allKsbCards = document.querySelectorAll('.ksb-card');
            const clickedTag = event.target.closest('.ksb-map-tag');

            // If a map tag was clicked
            if (clickedTag) {
                const targetId = clickedTag.dataset.map;
                const parentCard = clickedTag.closest('.ksb-card');
                const isAlreadyHighlighted = parentCard ? parentCard.classList.contains('highlight') : false;
                
                // First, clear all existing highlights
                allKsbCards.forEach(card => card.classList.remove('highlight'));

                // If the clicked card wasn't already part of a highlight group, create a new one
                if (!isAlreadyHighlighted) {
                    const cardsToHighlight = new Set();
                    
                    // 1. The card that IS the target ID
                    const primaryCard = document.getElementById(`ksb-${targetId}`);
                    if (primaryCard) {
                        cardsToHighlight.add(primaryCard);
                    }

                    // 2. All cards that LINK to the target ID
                    const linkingTags = document.querySelectorAll(`.ksb-map-tag[data-map="${targetId}"]`);
                    linkingTags.forEach(tag => {
                        const pCard = tag.closest('.ksb-card');
                        if (pCard) cardsToHighlight.add(pCard);
                    });
                    
                    // 3. The card that was clicked on
                    if(parentCard) cardsToHighlight.add(parentCard);


                    // Apply highlighting to the new set
                    cardsToHighlight.forEach(card => card.classList.add('highlight'));
                }
                // If it was already highlighted, the clearing step above handles the "toggle off"
            } else if (!event.target.closest('.ksb-card')) {
                // If the click was in the main content background (not on any card), clear all highlights.
                 allKsbCards.forEach(card => card.classList.remove('highlight'));
            }
        });
    });
    </script>
</body>
</html>
